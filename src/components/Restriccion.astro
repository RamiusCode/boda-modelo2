                        <img
                            src="/iconos/restriccion.png"
                            alt="Icono de copas"
                            class="w-full h-full object-contain relative z-10
             transform transition-transform duration-300 hover:scale-110 verde-filter"
                        />
                    </div>
                </div>

                <!-- T√≠tulo principal -->
                <h3
                    class="text-[#9C7A2E] tracking-[0.3em] uppercase text-xl md:text-2xl mb-2 relative inline-block"
                >
                    Solo Adultos
                </h3>

                <!-- Punto decorativo -->
                <div class="flex justify-center mb-6">
                    <div class="w-1.5 h-1.5 rounded-full bg-[#0F3D2E]/40"></div>
                </div>

                <!-- Texto descriptivo -->
                <p
                    class="font-charm text-[#0F3D2E] text-lg md:text-xl leading-relaxed"
                >
                    Un evento para adultos est√° en camino. ¬°As√≠ que prep√°rense
                    para una noche llena de diversi√≥n!
                </p>
            </div>
        </div>
    </div>
</section>

<!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
<!-- üé® ESTILOS PERSONALIZADOS                                   -->
<!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
<style>
    /* Part√≠culas flotantes doradas */
    .particula-dorada {
        position: absolute;
        width: 4px;
        height: 4px;
        background: radial-gradient(circle, #9c7a2e 0%, transparent 70%);
        border-radius: 50%;
        animation: flotar 6s ease-in-out infinite;
        opacity: 0.4;
    }

    @keyframes flotar {
        0%,
        100% {
            transform: translateY(0) translateX(0);
            opacity: 0.2;
        }
        50% {
            transform: translateY(-30px) translateX(15px);
            opacity: 0.6;
        }
    }

    /* Animaci√≥n de pulso lento */
    @keyframes pulse-slow {
        0%,
        100% {
            opacity: 0.4;
            transform: scale(1);
        }
        50% {
            opacity: 0.6;
            transform: scale(1.05);
        }
    }

    .animate-pulse-slow {
        animation: pulse-slow 4s ease-in-out infinite;
    }

    /* Animaci√≥n suave del icono */
    .adultos-icon-container:hover svg {
        animation: bounce-gentle 0.6s ease;
    }

    @keyframes bounce-gentle {
        0%,
        100% {
            transform: translateY(0) scale(1);
        }
        50% {
            transform: translateY(-8px) scale(1.05);
        }
    }
</style>

<!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
<!-- üé¨ ANIMACIONES CON GSAP                                     -->
<!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
<script>
    import { gsap } from "gsap";
    import { ScrollTrigger } from "gsap/ScrollTrigger";

    gsap.registerPlugin(ScrollTrigger);

    const initAdultos = () => {
        console.log("üçæ Iniciando secci√≥n Solo Adultos...");

        // ‚ïê‚ïê‚ïê ESTADO INICIAL ‚ïê‚ïê‚ïê
        gsap.set("#contenedor-adultos", {
            opacity: 0,
            y: 50,
            scale: 0.95,
        });

        // Flores laterales - VIENEN DESDE AFUERA M√ÅS SUAVE
        gsap.set("#flor-adultos-left", {
            opacity: 0,
            x: -40,
            rotation: -8,
            scale: 0.9,
        });

        gsap.set("#flor-adultos-right", {
            opacity: 0,
            x: 40,
            rotation: 8,
            scaleX: -0.9,
            scaleY: 0.9,
        });

        // Hojas doradas - CRECIMIENTO NATURAL DESDE ABAJO
        gsap.set("#hoja-adultos-left", {
            opacity: 0,
            scale: 0,
            rotation: -6,
            transformOrigin: "bottom center",
        });

        gsap.set("#hoja-adultos-right", {
            opacity: 0,
            scaleX: 0,
            scaleY: 0,
            rotation: 6,
            transformOrigin: "bottom center",
        });

        gsap.set("#tarjeta-adultos", { opacity: 0, y: 20 });

        // ‚ïê‚ïê‚ïê ANIMACI√ìN PRINCIPAL ‚ïê‚ïê‚ïê
        ScrollTrigger.create({
            trigger: "#contenedor-adultos",
            start: "top 75%",
            end: "top 20%",

            onEnter: () => {
                const tl = gsap.timeline();

                // Card y flores aparecen juntos
                tl.to(
                    "#contenedor-adultos",
                    {
                        opacity: 1,
                        y: 0,
                        scale: 1,
                        duration: 1.6,
                        ease: "power3.out",
                    },
                    0,
                )

                    // üå∏ FLORES LATERALES - M√ÅS SUAVES
                    .to(
                        "#flor-adultos-left",
                        {
                            opacity: 0.75,
                            x: 0,
                            rotation: -3,
                            scale: 1,
                            duration: 2.8,
                            ease: "sine.out",
                        },
                        0,
                    )

                    .to(
                        "#flor-adultos-right",
                        {
                            opacity: 0.75,
                            x: 0,
                            rotation: 3,
                            scaleX: -1,
                            scaleY: 1,
                            duration: 2.8,
                            ease: "sine.out",
                        },
                        0.05,
                    )

                    // üçÉ HOJAS DORADAS APARECEN AL MISMO TIEMPO QUE EL CARD
                    .to(
                        "#hoja-adultos-left",
                        {
                            opacity: 0.7,
                            scale: 0.9,
                            rotation: -3,
                            duration: 2.2,
                            ease: "sine.out",
                        },
                        0.1,
                    )

                    .to(
                        "#hoja-adultos-right",
                        {
                            opacity: 0.7,
                            scaleX: -0.9,
                            scaleY: 0.9,
                            rotation: 3,
                            duration: 2.2,
                            ease: "sine.out",
                        },
                        0.15,
                    )

                    // Tarjeta de contenido
                    .to(
                        "#tarjeta-adultos",
                        {
                            opacity: 1,
                            y: 0,
                            duration: 1,
                            ease: "power2.out",
                        },
                        0.8,
                    );

                // Animaci√≥n continua de las flores - FLOTACI√ìN DELICADA
                gsap.to("#flor-adultos-left", {
                    y: -4,
                    rotation: -4,
                    duration: 5.5,
                    repeat: -1,
                    yoyo: true,
                    ease: "sine.inOut",
                    delay: 3,
                });

                gsap.to("#flor-adultos-right", {
                    y: -4,
                    rotation: 4,
                    duration: 5.5,
                    repeat: -1,
                    yoyo: true,
                    ease: "sine.inOut",
                    delay: 3.1,
                });

                // Animaci√≥n continua de las hojas doradas
                gsap.to("#hoja-adultos-left", {
                    y: -5,
                    rotation: -5,
                    scale: 0.92,
                    duration: 5,
                    repeat: -1,
                    yoyo: true,
                    ease: "sine.inOut",
                    delay: 3.2,
                });

                gsap.to("#hoja-adultos-right", {
                    y: -5,
                    rotation: 5,
                    scaleX: -0.92,
                    scaleY: 0.92,
                    duration: 5,
                    repeat: -1,
                    yoyo: true,
                    ease: "sine.inOut",
                    delay: 3.3,
                });
            },

            onLeaveBack: () => {
                // Resetear todas las animaciones continuas
                gsap.killTweensOf("#flor-adultos-left");
                gsap.killTweensOf("#flor-adultos-right");
                gsap.killTweensOf("#hoja-adultos-left");
                gsap.killTweensOf("#hoja-adultos-right");

                const tl = gsap.timeline();

                tl.to(
                    "#tarjeta-adultos",
                    {
                        opacity: 0,
                        y: 20,
                        duration: 0.3,
                        ease: "power2.in",
                    },
                    0,
                )

                    .to(
                        "#contenedor-adultos",
                        {
                            opacity: 0,
                            y: 50,
                            scale: 0.95,
                            duration: 0.5,
                            ease: "power2.in",
                        },
                        "<",
                    )

                    // Las flores se van hacia afuera suavemente
                    .to(
                        "#flor-adultos-left",
                        {
                            opacity: 0,
                            x: -40,
                            duration: 1,
                            ease: "sine.in",
                        },
                        "<",
                    )

                    .to(
                        "#flor-adultos-right",
                        {
                            opacity: 0,
                            x: 40,
                            duration: 1,
                            ease: "sine.in",
                        },
                        "<",
                    )

                    // Las hojas se encogen
                    .to(
                        "#hoja-adultos-left, #hoja-adultos-right",
                        {
                            opacity: 0,
                            scale: 0,
                            duration: 0.8,
                            ease: "sine.in",
                        },
                        "<",
                    )

                    // Resetear estado inicial flores
                    .set("#flor-adultos-left", {
                        rotation: -8,
                        scale: 0.9,
                    })

                    .set("#flor-adultos-right", {
                        rotation: 8,
                        scaleX: -0.9,
                        scaleY: 0.9,
                    })

                    // Resetear estado inicial hojas
                    .set("#hoja-adultos-left", {
                        rotation: -6,
                        transformOrigin: "bottom center",
                    })

                    .set("#hoja-adultos-right", {
                        scaleX: 0,
                        scaleY: 0,
                        rotation: 6,
                        transformOrigin: "bottom center",
                    });
            },
        });

        console.log("üçæ‚ú® Secci√≥n Solo Adultos activada!");
    };

    document.addEventListener("DOMContentLoaded", initAdultos);
    document.addEventListener("astro:page-load", initAdultos);
</script>

<!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
<!-- üé® ESTILOS PARA CONVERTIR IM√ÅGENES NEGRAS A VERDE OSCURO     -->
<!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
<style>
    /* Filtro que convierte im√°genes PNG negras al color #0F3D2E */
    .verde-filter {
        filter: brightness(0) saturate(100%) invert(18%) sepia(42%)
            saturate(525%) hue-rotate(115deg) brightness(78%) contrast(105%);
    }
</style>
