<style>
    @keyframes zoom-in {
        from {
            transform: scale(1.2);
            opacity: 0;
        }
        to {
            transform: scale(1);
            opacity: 1;
        }
    }

    @keyframes fade-in {
        from {
            opacity: 0;
            filter: blur(4px);
        }
        to {
            opacity: 1;
            filter: blur(0);
        }
    }

    @keyframes bounce-slow {
        0%,
        100% {
            transform: translateY(0);
            opacity: 0.6;
        }
        50% {
            transform: translateY(10px);
            opacity: 1;
        }
    }

    @keyframes float {
        0%,
        100% {
            transform: translate(0, 0) scale(1);
            opacity: 0.6;
        }
        25% {
            transform: translate(-20px, -30px) scale(1.2);
            opacity: 0.8;
        }
        50% {
            transform: translate(15px, 20px) scale(0.9);
            opacity: 0.4;
        }
        75% {
            transform: translate(-10px, 35px) scale(1.3);
            opacity: 0.7;
        }
    }
</style>
