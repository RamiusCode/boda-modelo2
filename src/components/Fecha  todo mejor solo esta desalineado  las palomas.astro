<!-- üé¨ ANIMACIONES CON GSAP                                     -->
<!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  if (typeof window !== "undefined") {
    document.addEventListener("DOMContentLoaded", () => {
      console.log("üìÖ Iniciando animaciones de fecha...");

      // üéØ ESTADO INICIAL - Todo oculto
      gsap.set("#paloma-izq", { opacity: 0, x: -200 });
      gsap.set("#paloma-der", { opacity: 0, x: 200 });
      gsap.set("#hoja-fecha-izq", { opacity: 0, x: -30 });
      gsap.set("#hoja-fecha-der", { opacity: 0, x: 30 });
      gsap.set("#texto-invitacion", { opacity: 0, scale: 0.9 });
      gsap.set("#anio-evento", { opacity: 0, scale: 0.9 });
      gsap.set("#fecha-evento", { opacity: 0, scale: 0.9 });
      gsap.set("#hora-evento", { opacity: 0, scale: 0.9 });

      // ‚ú® ANIMACI√ìN: PALOMAS VUELAN M√ÅS SEPARADAS PARA NO SUPERPONERSE
      ScrollTrigger.create({
        trigger: "#palomas-container",
        start: "top 85%",
        end: "top 20%",

        onEnter: () => {
          const tl = gsap.timeline();

          // 1. PALOMAS VUELAN DESDE LOS COSTADOS - M√ÅS SEPARADAS
          tl.to(
            "#paloma-izq, #paloma-der",
            {
              opacity: 1,
              duration: 1.5,
              ease: "power2.out",
            },
            0,
          )

            .to(
              "#paloma-izq",
              {
                x: -70, // M√ÅS ALEJADA DEL CENTRO (antes era -50)
                duration: 2.5,
                ease: "power2.out",
              },
              0,
            )

            .to(
              "#paloma-der",
              {
                x: 70, // M√ÅS ALEJADA DEL CENTRO (antes era 50)
                duration: 2.5,
                ease: "power2.out",
              },
              0,
            )

            // 2. TEXTOS APARECEN
            .to(
              "#texto-invitacion, #anio-evento, #fecha-evento, #hora-evento",
              {
                opacity: 1,
                scale: 1,
                duration: 1,
                ease: "back.out(1.2)",
              },
              0.8,
            )

            // 3. HOJAS APARECEN AL FINAL
            .to(
              "#hoja-fecha-izq, #hoja-fecha-der",
              {
                opacity: 1,
                duration: 1,
                ease: "power2.out",
              },
              1.3,
            )

            .to(
              "#hoja-fecha-izq",
              {
                x: 0,
                duration: 1,
                ease: "power2.out",
              },
              1.3,
            )

            .to(
              "#hoja-fecha-der",
              {
                x: 0,
                duration: 1,
                ease: "power2.out",
              },
              1.3,
            );
        },

        onLeaveBack: () => {
          // Resetear todo al salir por arriba
          const tl = gsap.timeline();

          tl.to(
            "#paloma-izq, #paloma-der, #hoja-fecha-izq, #hoja-fecha-der, #texto-invitacion, #anio-evento, #fecha-evento, #hora-evento",
            {
              opacity: 0,
              duration: 0.5,
              ease: "power2.in",
            },
          )
            .to(
              "#paloma-izq",
              {
                x: -200,
                duration: 0.5,
                ease: "power2.in",
              },
              "<",
            )
            .to(
              "#paloma-der",
              {
                x: 200,
                duration: 0.5,
                ease: "power2.in",
              },
              "<",
            )
            .to(
              "#hoja-fecha-izq",
              {
                x: -30,
                duration: 0.5,
                ease: "power2.in",
              },
              "<",
            )
            .to(
              "#hoja-fecha-der",
              {
                x: 30,
                duration: 0.5,
                ease: "power2.in",
              },
              "<",
            )
            .to(
              "#texto-invitacion, #anio-evento, #fecha-evento, #hora-evento",
              {
                scale: 0.9,
                duration: 0.5,
                ease: "power2.in",
              },
              "<",
            );
        },
      });

      console.log("‚ú® Animaciones de fecha con palomas separadas listas!");
    });
  }
</script>
