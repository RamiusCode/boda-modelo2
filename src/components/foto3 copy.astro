<style>
    /* PartÃ­culas doradas - BRILLO ELEGANTE MODERADO */
    .particle-gold-3 {
        background: radial-gradient(
            circle,
            rgba(255, 215, 0, 0.7) 0%,
            rgba(255, 215, 0, 0.5) 40%,
            rgba(255, 215, 0, 0.2) 70%,
            transparent 100%
        );
        box-shadow:
            0 0 12px rgba(255, 215, 0, 0.6),
            0 0 24px rgba(255, 215, 0, 0.4),
            0 0 36px rgba(255, 215, 0, 0.2);
        animation: float-gold-3 14s ease-in-out infinite;
    }

    /* PartÃ­culas plateadas - BRILLO ELEGANTE MODERADO */
    .particle-silver-3 {
        background: radial-gradient(
            circle,
            rgba(230, 230, 250, 0.7) 0%,
            rgba(230, 230, 250, 0.5) 40%,
            rgba(230, 230, 250, 0.25) 70%,
            transparent 100%
        );
        box-shadow:
            0 0 12px rgba(230, 230, 250, 0.6),
            0 0 24px rgba(230, 230, 250, 0.4),
            0 0 36px rgba(230, 230, 250, 0.2);
        animation: float-silver-3 12s ease-in-out infinite;
    }

    /* PartÃ­culas pequeÃ±as - BRILLO SUAVE */
    .particle-tiny-3 {
        width: 5px;
        height: 5px;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.7);
        box-shadow:
            0 0 8px rgba(255, 255, 255, 0.6),
            0 0 16px rgba(255, 255, 255, 0.3);
        animation: twinkle-3 4s ease-in-out infinite;
    }

    /* Rayos de luz - SUAVES Y ELEGANTES */
    .light-ray-3 {
        position: absolute;
        width: 3px;
        height: 100%;
        background: linear-gradient(
            to bottom,
            transparent 0%,
            rgba(255, 255, 255, 0.15) 25%,
            rgba(255, 255, 255, 0.25) 50%,
            rgba(255, 255, 255, 0.15) 75%,
            transparent 100%
        );
        opacity: 0;
        animation: ray-sweep-3 10s ease-in-out infinite;
        filter: blur(2px);
    }

    .light-ray-3-1 {
        left: 20%;
        animation-delay: 0s;
    }

    .light-ray-3-2 {
        left: 50%;
        animation-delay: 3s;
    }

    .light-ray-3-3 {
        left: 75%;
        animation-delay: 6s;
    }

    /* AnimaciÃ³n de flotaciÃ³n dorada - SUAVE Y ELEGANTE */
    @keyframes float-gold-3 {
        0%,
        100% {
            transform: translate(0, 0) scale(1);
            opacity: 0.6;
        }
        25% {
            transform: translate(-30px, -40px) scale(1.2);
            opacity: 0.8;
        }
        50% {
            transform: translate(20px, 30px) scale(0.9);
            opacity: 0.5;
        }
        75% {
            transform: translate(-15px, 45px) scale(1.15);
            opacity: 0.7;
        }
    }

    /* AnimaciÃ³n de flotaciÃ³n plateada - SUAVE Y ELEGANTE */
    @keyframes float-silver-3 {
        0%,
        100% {
            transform: translate(0, 0) scale(1) rotate(0deg);
            opacity: 0.6;
        }
        33% {
            transform: translate(25px, -35px) scale(1.15) rotate(90deg);
            opacity: 0.8;
        }
        66% {
            transform: translate(-20px, 30px) scale(0.95) rotate(180deg);
            opacity: 0.5;
        }
    }

    /* AnimaciÃ³n de parpadeo - SUAVE */
    @keyframes twinkle-3 {
        0%,
        100% {
            opacity: 0.3;
            transform: scale(1);
        }
        50% {
            opacity: 0.7;
            transform: scale(1.3);
        }
    }

    /* AnimaciÃ³n de rayos de luz - SUAVE */
    @keyframes ray-sweep-3 {
        0% {
            opacity: 0;
            transform: translateX(-40px) scaleY(0.85);
        }
        50% {
            opacity: 0.5;
            transform: translateX(0) scaleY(1);
        }
        100% {
            opacity: 0;
            transform: translateX(40px) scaleY(0.85);
        }
    }

    /* AÃ±adir delay diferente a cada partÃ­cula */
    .particle-gold-3:nth-child(1) {
        animation-delay: 0s;
    }
    .particle-gold-3:nth-child(3) {
        animation-delay: 2.5s;
    }
    .particle-gold-3:nth-child(5) {
        animation-delay: 5s;
    }
    .particle-gold-3:nth-child(7) {
        animation-delay: 7.5s;
    }
    .particle-gold-3:nth-child(9) {
        animation-delay: 1.5s;
    }
    .particle-gold-3:nth-child(11) {
        animation-delay: 4s;
    }
    .particle-gold-3:nth-child(13) {
        animation-delay: 6.5s;
    }
    .particle-gold-3:nth-child(15) {
        animation-delay: 9s;
    }

    .particle-silver-3:nth-child(2) {
        animation-delay: 1s;
    }
    .particle-silver-3:nth-child(4) {
        animation-delay: 3.5s;
    }
    .particle-silver-3:nth-child(6) {
        animation-delay: 6s;
    }
    .particle-silver-3:nth-child(8) {
        animation-delay: 8.5s;
    }
    .particle-silver-3:nth-child(10) {
        animation-delay: 2s;
    }
    .particle-silver-3:nth-child(12) {
        animation-delay: 4.5s;
    }
    .particle-silver-3:nth-child(14) {
        animation-delay: 7s;
    }

    .particle-tiny-3:nth-child(16) {
        animation-delay: 0s;
    }
    .particle-tiny-3:nth-child(17) {
        animation-delay: 1.3s;
    }
    .particle-tiny-3:nth-child(18) {
        animation-delay: 2.6s;
    }
    .particle-tiny-3:nth-child(19) {
        animation-delay: 0.7s;
    }
    .particle-tiny-3:nth-child(20) {
        animation-delay: 2s;
    }
    .particle-tiny-3:nth-child(21) {
        animation-delay: 3.3s;
    }

    /* â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• */
    /* ğŸ¨ OPTIMIZACIÃ“N DE RENDIMIENTO PARA GSAP               */
    /* â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• */
    #parallax-image-3 {
        backface-visibility: hidden;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
        transform-origin: center center;
    }

    section {
        transform-style: preserve-3d;
    }
</style>

<!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
<!-- ğŸ¬ ANIMACIONES CON GSAP - ZOOM SUAVE Y ELEGANTE             -->
<!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
<script>
    import { gsap } from "gsap";
    import { ScrollTrigger } from "gsap/ScrollTrigger";

    gsap.registerPlugin(ScrollTrigger);

    document.addEventListener("DOMContentLoaded", () => {
        console.log("âœ¨ Iniciando efectos elegantes de boda FOTO 3...");

        const parallaxImage = document.getElementById("parallax-image-3");
        const overlay = document.getElementById("overlay-3");
        const velo = document.getElementById("velo-3");
        const particlesContainer = document.getElementById(
            "particles-container-3",
        );
        const lightRays = document.getElementById("light-rays-3");

        // â•â•â• ESTADO INICIAL - Zoom moderado â•â•â•
        gsap.set(parallaxImage, {
            scale: 1.2,
            opacity: 0,
            filter: "blur(3px) brightness(1)",
        });

        gsap.set(velo, { opacity: 1 });
        gsap.set(overlay, { opacity: 0.15 });

        // â•â•â• ANIMACIÃ“N PRINCIPAL - Entrada suave al cargar â•â•â•
        gsap.to(parallaxImage, {
            scale: 1,
            opacity: 1,
            filter: "blur(0px) brightness(1)",
            duration: 2.5,
            ease: "power2.out",
            delay: 0.4,
        });

        // â•â•â• EFECTO DE SCROLL - Zoom SUAVE Y ELEGANTE â•â•â•
        gsap.to(parallaxImage, {
            scale: 1.6,
            y: "35%",
            filter: "blur(4px) brightness(1.15)",
            ease: "none",
            scrollTrigger: {
                trigger: "section",
                start: "top top",
                end: "bottom top",
                scrub: 2,
            },
        });

        // â•â•â• OVERLAY - Oscurecer moderadamente al hacer scroll â•â•â•
        gsap.to(overlay, {
            opacity: 0.5,
            ease: "none",
            scrollTrigger: {
                trigger: "section",
                start: "top top",
                end: "bottom top",
                scrub: 2,
            },
        });

        // â•â•â• VELO - Desvanecer suavemente â•â•â•
        gsap.to(velo, {
            opacity: 0,
            y: 80,
            ease: "none",
            scrollTrigger: {
                trigger: "section",
                start: "top top",
                end: "45% top",
                scrub: 1.5,
            },
        });

        // â•â•â• PARTÃCULAS - Movimiento parallax suave â•â•â•
        gsap.to(particlesContainer, {
            y: "-50%",
            opacity: 0.4,
            ease: "none",
            scrollTrigger: {
                trigger: "section",
                start: "top top",
                end: "bottom top",
                scrub: 2.5,
            },
        });

        // â•â•â• RAYOS DE LUZ - Aparecer sutilmente â•â•â•
        gsap.to(lightRays, {
            opacity: 0.7,
            ease: "none",
            scrollTrigger: {
                trigger: "section",
                start: "top top",
                end: "55% top",
                scrub: 1.5,
            },
        });

        console.log("âœ¨ğŸ’ Efectos elegantes FOTO 3 activados!");
    });
</script>
