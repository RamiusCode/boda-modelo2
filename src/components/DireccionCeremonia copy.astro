<!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
<!-- üé¨ ANIMACIONES CON GSAP                                     -->
<!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
<script>
    import { gsap } from "gsap";
    import { ScrollTrigger } from "gsap/ScrollTrigger";

    gsap.registerPlugin(ScrollTrigger);

    const initCeremonias = () => {
        console.log("üíí Iniciando secci√≥n de ceremonias...");

        // ‚ïê‚ïê‚ïê ESTADO INICIAL ‚ïê‚ïê‚ïê
        gsap.set("#ceremonia-civil, #ceremonia-religiosa, #vestimenta", {
            opacity: 0,
            y: 30,
        });
        gsap.set("#hoja-eventos-left", {
            opacity: 0,
            y: -30,
            x: -20,
            rotation: -15,
        });
        gsap.set("#hoja-eventos-right", {
            opacity: 0,
            y: -30,
            x: 20,
            rotation: 15,
            scaleX: -1,
        });

        // ‚ïê‚ïê‚ïê ANIMACI√ìN AL ENTRAR ‚ïê‚ïê‚ïê
        ScrollTrigger.create({
            trigger: "#contenedor-eventos",
            start: "top 85%",
            end: "top 20%",

            onEnter: () => {
                const tl = gsap.timeline();

                // HOJAS PRIMERO
                tl.to(
                    "#hoja-eventos-left",
                    {
                        opacity: 0.6,
                        y: 0,
                        x: 0,
                        rotation: 0,
                        duration: 1.5,
                        ease: "power2.out",
                    },
                    0,
                )

                    .to(
                        "#hoja-eventos-right",
                        {
                            opacity: 0.6,
                            y: 0,
                            x: 0,
                            rotation: 0,
                            scaleX: -1,
                            duration: 1.5,
                            ease: "power2.out",
                        },
                        0,
                    )

                    // LUEGO LOS EVENTOS EN CASCADA
                    .to(
                        "#ceremonia-civil",
                        {
                            opacity: 1,
                            y: 0,
                            duration: 1,
                            ease: "power2.out",
                        },
                        0.3,
                    )

                    .to(
                        "#ceremonia-religiosa",
                        {
                            opacity: 1,
                            y: 0,
                            duration: 1,
                            ease: "power2.out",
                        },
                        0.5,
                    )

                    .to(
                        "#vestimenta",
                        {
                            opacity: 1,
                            y: 0,
                            duration: 1,
                            ease: "power2.out",
                        },
                        0.7,
                    );
            },

            onLeaveBack: () => {
                const tl = gsap.timeline();

                tl.to(
                    "#ceremonia-civil, #ceremonia-religiosa, #vestimenta, #hoja-eventos-left, #hoja-eventos-right",
                    {
                        opacity: 0,
                        duration: 0.4,
                        ease: "power2.in",
                    },
                )
                    .to(
                        "#ceremonia-civil, #ceremonia-religiosa, #vestimenta",
                        {
                            y: 30,
                            duration: 0.4,
                            ease: "power2.in",
                        },
                        "<",
                    )
                    .to(
                        "#hoja-eventos-left",
                        {
                            y: -30,
                            x: -20,
                            rotation: -15,
                            duration: 0.4,
                            ease: "power2.in",
                        },
                        "<",
                    )
                    .to(
                        "#hoja-eventos-right",
                        {
                            y: -30,
                            x: 20,
                            rotation: 15,
                            duration: 0.4,
                            ease: "power2.in",
                        },
                        "<",
                    );
            },
        });

        console.log("üíí‚ú® Secci√≥n de ceremonias activada!");
    };

    document.addEventListener("DOMContentLoaded", initCeremonias);
    document.addEventListener("astro:page-load", initCeremonias);
</script>
