<!-- üé¨ ANIMACIONES CON GSAP                                     -->
<!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  if (typeof window !== "undefined") {
    document.addEventListener("DOMContentLoaded", () => {
      console.log("üìÖ Iniciando animaciones de fecha...");

      // üéØ ESTADO INICIAL - Todo oculto
      gsap.set("#flores-fecha", { opacity: 0, scale: 0.8 });
      gsap.set("#hoja-fecha-izq", { opacity: 0, x: -30 });
      gsap.set("#hoja-fecha-der", { opacity: 0, x: 30 });
      gsap.set("#texto-invitacion", { opacity: 0, scale: 0.9 });
      gsap.set("#anio-evento", { opacity: 0, scale: 0.9 });
      gsap.set("#fecha-evento", { opacity: 0, scale: 0.9 });
      gsap.set("#hora-evento", { opacity: 0, scale: 0.9 });

      // ‚ú® ANIMACI√ìN: FLORES Y TEXTOS AL MISMO TIEMPO, HOJAS MEDIO SEGUNDO DESPU√âS
      ScrollTrigger.create({
        trigger: "#flores-fecha",
        start: "top 85%",
        end: "top 20%",

        onEnter: () => {
          const tl = gsap.timeline();

          // FLORES Y TEXTOS AL MISMO TIEMPO (tiempo 0)
          tl.to(
            "#flores-fecha, #texto-invitacion, #anio-evento, #fecha-evento, #hora-evento",
            {
              opacity: 1,
              duration: 1,
              ease: "power2.out",
            },
            0,
          )

            // Animaciones individuales de flores y textos (tiempo 0)
            .to(
              "#flores-fecha",
              {
                scale: 1,
                duration: 1.2,
                ease: "back.out(1.4)",
              },
              0,
            )

            .to(
              "#texto-invitacion, #anio-evento, #fecha-evento, #hora-evento",
              {
                scale: 1,
                duration: 1,
                ease: "back.out(1.2)",
              },
              0,
            )

            // HOJAS MEDIO SEGUNDO DESPU√âS (tiempo 0.5)
            .to(
              "#hoja-fecha-izq, #hoja-fecha-der",
              {
                opacity: 1,
                duration: 1,
                ease: "power2.out",
              },
              0.5,
            )

            .to(
              "#hoja-fecha-izq",
              {
                x: 0,
                duration: 1,
                ease: "power2.out",
              },
              0.5,
            )

            .to(
              "#hoja-fecha-der",
              {
                x: 0,
                duration: 1,
                ease: "power2.out",
              },
              0.5,
            );
        },

        onLeaveBack: () => {
          // Resetear todo al salir por arriba - SIMULT√ÅNEO
          const tl = gsap.timeline();

          tl.to(
            "#flores-fecha, #hoja-fecha-izq, #hoja-fecha-der, #texto-invitacion, #anio-evento, #fecha-evento, #hora-evento",
            {
              opacity: 0,
              duration: 0.5,
              ease: "power2.in",
            },
          )
            .to(
              "#flores-fecha",
              {
                scale: 0.8,
                duration: 0.5,
                ease: "power2.in",
              },
              "<",
            )
            .to(
              "#hoja-fecha-izq",
              {
                x: -30,
                duration: 0.5,
                ease: "power2.in",
              },
              "<",
            )
            .to(
              "#hoja-fecha-der",
              {
                x: 30,
                duration: 0.5,
                ease: "power2.in",
              },
              "<",
            )
            .to(
              "#texto-invitacion, #anio-evento, #fecha-evento, #hora-evento",
              {
                scale: 0.9,
                duration: 0.5,
                ease: "power2.in",
              },
              "<",
            );
        },
      });

      console.log("‚ú® Animaciones de fecha listas!");
    });
  }
</script>

